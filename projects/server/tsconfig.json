{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES5",
        "outDir": "lib",
        "composite": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "src",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*",
        "./src/schema/*.json"
    ]
}